<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.siam.system.modular.package_goods.mapper.TbUnitMapper">

  <resultMap id="BaseResultMap" type="com.siam.system.modular.package_goods.entity.TbUnit">
	<id column="id" jdbcType="BIGINT" property="id" />
	<result column="name" jdbcType="VARCHAR" property="name" />
	<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
	<result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <select id="page" resultMap="BaseResultMap">
    select * from tb_unit as t
    where 1 = 1
    <if test="param.id != null"> and t.id = #{param.id} </if>
    <if test="param.name != null and param.name != ''"> and t.name like CONCAT('%',#{param.name},'%') </if>
    <if test="param.createTime != null"> and t.create_time = #{param.createTime} </if>
    <if test="param.updateTime != null"> and t.update_time = #{param.updateTime} </if>
  </select>
  
</mapper>